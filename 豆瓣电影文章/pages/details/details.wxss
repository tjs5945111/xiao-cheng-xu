/* pages/details/details.wxss */
.count image{
    width: 100%;
    height: 580rpx;
}
.list,.img{
    display: flex;
}
.list{
    margin: 10px 0;
}
.list image{
    width: 80rpx;
    height: 80rpx; 
}
.list text{
    padding: 15rpx;
    font-size: 13px;
}
.img image{
    width: 60rpx;
    height: 60rpx;
    margin-right: 15rpx; 
}
.img{
  
  justify-content: flex-end;
}
.title{
    /* position: relative; */
    font-size: 16px;
    font-weight: bold;
}
.lin{
   position: relative;
    width: 100%;
    height: 1px;
   background: rgb(186, 184, 184);
    z-index: -99;
    top: 35rpx;
}
.counter{
    padding: 10rpx;
}
.text{
    font-size: 14px;
    text-indent: 30px;
    margin-top: 20px;
    line-height: 20px;
}
.count{
    position: relative;
}
.count .music{
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 100;
}