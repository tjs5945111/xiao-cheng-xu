/* pages/Article/Article.wxss */
swiper{
    height: 580rpx;
}
swiper image{
    width:100%;
    height: 100%;
}
.top{
    display: flex;
}
.top image{
    width: 80rpx;
    height: 80rpx;
}
.top text{
    font-size: 13px;
    padding: 20rpx;
}
.conter{
  
    padding: 10rpx;
    margin-top: 25rpx;
    padding-top: 25rpx;
    border-top: 1px solid #e9e6e6;
}
.conter .title{
    font-size: 14px;
    font-weight: bold;
}
.conter .img{
    width: 100%;
    margin-top: 20rpx;
}
.bottom{
    display: flex;
    margin-top: 15rpx;
    padding-bottom: 15rpx;
    border-bottom: 1px solid #e9e6e6;
}
.bottom image{
    width: 50rpx;
    height: 50rpx;
}
.bottom text{
    margin: 0 25rpx;
    font-size: 13px;
    opacity: .7;
   
}